<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/txt_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/img_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_points"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="points"
        android:paddingRight="8dp"
        android:paddingTop="8dp"

        />

    <TextView
        android:id="@+id/txt_comments"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="comments"


        />
        </LinearLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageButton

            android:id="@+id/img_up"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_upward_black_24dp"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/img_down"
            android:layout_toRightOf="@+id/img_up"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_downward_black_24dp"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            android:layout_gravity="center_vertical"/>

        <ImageButton

            android:id="@+id/img_comment"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_down"
            android:src="@mipmap/ic_comment_black_24dp"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            android:layout_gravity="center_vertical"

            />

        <ImageButton
            android:id="@+id/img_more"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_comment"
            android:src="@mipmap/ic_more_vert_black_24dp"
            android:background="@android:color/white"
            android:layout_margin="8dp"

            android:layout_gravity="center_vertical"
                        />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:text="share"
            android:background="@android:color/holo_blue_bright"
          />

        </RelativeLayout>


</LinearLayout>